<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        app:key="VIN"
        app:title="@string/VIN"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:defaultValue="30"
        app:entries="@array/pref_update_values"
        app:entryValues="@array/pref_update_values"
        app:key="update_frequency"
        app:negativeButtonText="@null"
        app:positiveButtonText="@null"
        app:title="@string/widget_update_frequency"
        app:useSimpleSummaryProvider="true" />

    <SwitchPreferenceCompat
        app:defaultValue="false"
        app:key="transparentBackground"
        app:singleLineTitle="false"
        app:title="@string/transparent_back" />

    <SwitchPreferenceCompat
        app:defaultValue="true"
        app:key="showAppLinks"
        app:singleLineTitle="false"
        app:title="Enable app launcher buttons" />

    <SwitchPreferenceCompat
        app:defaultValue="false"
        app:dependency="showAppLinks"
        app:key="showAllApps"
        app:singleLineTitle="false"
        app:title="@string/choose_apps_title" />


    <!--
    <SwitchPreferenceCompat
        app:defaultValue="false"
        app:key="units"
        app:title="@string/unit_title" />

    <SwitchPreferenceCompat
        app:defaultValue="true"
        app:key="dark_mode"
        app:title="@string/dark_mode_title" />
    -->

</PreferenceScreen>